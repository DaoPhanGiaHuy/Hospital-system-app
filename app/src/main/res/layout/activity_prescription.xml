<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutPrescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FAFAFA">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn thuốc"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerMedicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/edtDosage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Liều dùng (VD: 2 viên/ngày)"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnAddPrescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm đơn thuốc"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <ListView
        android:id="@+id/lvPrescriptions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#CCCCCC"
        android:dividerHeight="1dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quay lại"
        android:background="#000000"
        android:textColor="#FFFFFF" />

</LinearLayout>
